<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/stepNumberTextView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/circle_step_number"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <TextView
        android:id="@+id/stepDescriptionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/stepNumberTextView"
        app:layout_constraintTop_toTopOf="@id/stepNumberTextView"
        tools:text="Heat the olive oil in a large pan over medium heat." />

    <TextView
        android:id="@+id/stepIngredientsTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:textStyle="italic"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/stepNumberTextView"
        app:layout_constraintTop_toBottomOf="@id/stepDescriptionTextView"
        tools:text="Ingredients: olive oil"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/stepEquipmentTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:textStyle="italic"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/stepNumberTextView"
        app:layout_constraintTop_toBottomOf="@id/stepIngredientsTextView"
        tools:text="Equipment: pan"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>